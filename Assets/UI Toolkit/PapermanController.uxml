<ui:UXML xmlns:ui="UnityEngine.UIElements" xmlns:uie="UnityEditor.UIElements" xsi="http://www.w3.org/2001/XMLSchema-instance" engine="UnityEngine.UIElements" editor="UnityEditor.UIElements" noNamespaceSchemaLocation="../../UIElementsSchema/UIElements.xsd" editor-extension-mode="False">
    <ui:VisualElement style="justify-content: flex-start; height: auto; flex-direction: row; flex-grow: 1;">
        <ui:VisualElement name="ControlPanel" style="height: 100%; width: 30%; min-width: 250px; position: relative; min-height: auto; margin-left: 0; margin-right: 0; margin-top: 0; margin-bottom: 0; background-color: rgb(207, 207, 207); padding-left: 10px; padding-right: 10px; padding-top: 15px; padding-bottom: 10px; max-width: 350px; opacity: 0.9;">
            <ui:VisualElement name="ChooseModel">
                <ui:Label text="1. Choose a model" display-tooltip-when-elided="true" style="-unity-font-style: bold; background-color: rgb(137, 137, 137); padding-left: 5px; padding-right: 5px; padding-top: 5px; padding-bottom: 5px; margin-bottom: 5px;" />
                <ui:Button text="Import a 3D model from file..." display-tooltip-when-elided="true" name="ImportModelFromFile" />
                <ui:Button text="Pick an existing model (not yet implemented)" display-tooltip-when-elided="true" name="PickInLibrary" style="white-space: normal;" />
            </ui:VisualElement>
            <ui:VisualElement name="ChooseColors">
                <ui:Label text="2. Choose a color swatch" display-tooltip-when-elided="true" style="-unity-font-style: bold; padding-left: 5px; padding-right: 5px; padding-top: 5px; padding-bottom: 5px; background-color: rgb(143, 143, 143); margin-top: 10px; margin-bottom: 5px;" />
                <ui:VisualElement style="flex-direction: row; justify-content: space-between; margin-bottom: 5px; margin-top: 5px;">
                    <ui:VisualElement style="width: auto; align-items: stretch; height: auto; flex-direction: row; justify-content: space-between; flex-grow: 1;">
                        <ui:Button display-tooltip-when-elided="true" name="Color0" style="background-color: rgb(82, 20, 20); width: auto; height: 35px; position: relative; left: auto; max-width: 35px; flex-grow: 1;" />
                        <ui:Button display-tooltip-when-elided="true" name="Color1" style="background-color: rgb(173, 45, 71); width: auto; height: 35px; position: relative; left: auto; max-width: 35px; flex-grow: 1;" />
                        <ui:Button display-tooltip-when-elided="true" name="Color2" style="background-color: rgb(178, 100, 36); width: auto; height: 35px; position: relative; left: auto; max-width: 35px; flex-grow: 1;" />
                        <ui:Button display-tooltip-when-elided="true" name="Color3" style="background-color: rgb(224, 172, 16); width: auto; height: 35px; position: relative; left: auto; max-width: 35px; flex-grow: 1;" />
                        <ui:Button display-tooltip-when-elided="true" name="Color4" style="background-color: rgb(139, 144, 25); width: auto; height: 35px; position: relative; left: auto; max-width: 35px; flex-grow: 1;" />
                        <ui:Button display-tooltip-when-elided="true" name="Color5" style="background-color: rgb(78, 89, 15); width: auto; height: 35px; position: relative; left: auto; max-width: 35px; flex-grow: 1;" />
                    </ui:VisualElement>
                    <ui:Button text="Shuffle" display-tooltip-when-elided="true" name="ShuffleSwatch" style="align-items: auto;" />
                </ui:VisualElement>
                <ui:VisualElement style="margin-left: 5px; margin-right: 5px; height: 25px; flex-direction: row; justify-content: center; align-items: stretch;">
                    <ui:Button text="&lt; Previous swatch" display-tooltip-when-elided="true" name="PreviousSwatch" style="width: 120px; position: relative; white-space: nowrap;" />
                    <ui:Button text="Next swatch &gt;" display-tooltip-when-elided="true" name="NextSwatch" style="width: 120px; position: relative; left: auto;" />
                </ui:VisualElement>
            </ui:VisualElement>
            <ui:VisualElement name="SimplifyModel">
                <ui:VisualElement style="flex-direction: row; flex-wrap: wrap; background-color: rgb(143, 143, 143); margin-top: 10px; padding-left: 5px; padding-right: 5px; padding-top: 5px; padding-bottom: 5px; margin-bottom: 5px;">
                    <ui:Label text="3. Simplify your model&#10;" display-tooltip-when-elided="true" style="-unity-font-style: bold; padding-left: 0; padding-right: 0; padding-top: 0; padding-bottom: 0; -unity-text-align: middle-left;" />
                    <ui:Label text="(currently 850 faces)" display-tooltip-when-elided="true" name="FaceCount" style="flex-wrap: wrap; -unity-text-align: middle-left; padding-left: 5px;" />
                </ui:VisualElement>
                <ui:VisualElement style="flex-direction: column;">
                    <ui:Slider picking-mode="Ignore" label="Reduce face count to" value="300" high-value="1000" inverted="false" low-value="50" direction="Horizontal" usage-hints="None" tooltip="Select the target number of faces for your model" name="TargetFaces" show-input-field="true" focusable="true" page-size="1" style="justify-content: flex-end; align-items: stretch; flex-direction: row;" />
                    <ui:Button text="Simplify my model" display-tooltip-when-elided="true" name="ReduceMesh" />
                </ui:VisualElement>
            </ui:VisualElement>
            <ui:VisualElement name="BuildArtcraft">
                <ui:Label text="4. Generate your artcraft" display-tooltip-when-elided="true" style="margin-top: 10px; -unity-font-style: bold; -unity-text-align: upper-left; padding-left: 5px; padding-right: 5px; padding-top: 5px; padding-bottom: 5px; background-color: rgb(149, 149, 149); -unity-text-outline-color: rgb(143, 143, 143); margin-bottom: 5px;" />
                <ui:VisualElement style="flex-direction: column; justify-content: center; align-items: flex-start;">
                    <ui:Toggle label="Separate shapes per color" name="SortColors" value="true" tooltip="Tick this option if you want to print your artcraft on colored sheets" style="flex-direction: row-reverse; justify-content: center;" />
                </ui:VisualElement>
                <ui:Slider picking-mode="Ignore" label="Model Size (cm)" value="35" high-value="100" show-input-field="true" low-value="2" name="ModelSize" />
                <ui:Slider picking-mode="Ignore" label="Page width (mm)" value="210" high-value="1000" show-input-field="true" low-value="1" name="PageWidth" page-size="1" />
                <ui:Slider picking-mode="Ignore" label="Page height (mm)" value="297" high-value="1000" name="PageHeight" low-value="1" page-size="1" show-input-field="true" />
                <ui:Slider picking-mode="Ignore" label="Width margins (mm)" value="6" high-value="50" show-input-field="true" name="HeightMargin" page-size="1" />
                <ui:Slider picking-mode="Ignore" label="Height margins (mm)" value="6" high-value="50" show-input-field="true" name="WidthMargin" page-size="1" />
                <ui:Button text="Preview my artcraft" display-tooltip-when-elided="true" name="GeneratePreview" style="margin-top: 5px;" />
                <ui:Button text="Generate artcraft pattern" display-tooltip-when-elided="true" name="GenerateArtcraft" />
            </ui:VisualElement>
            <ui:VisualElement name="ExportArtcraft">
                <ui:Label text="5. Export your artcraft patterns" display-tooltip-when-elided="true" style="-unity-font-style: bold; margin-top: 10px; padding-top: 5px; padding-left: 5px; padding-right: 5px; padding-bottom: 5px; background-color: rgb(154, 154, 154); margin-bottom: 5px;" />
                <ui:VisualElement style="align-items: flex-start; flex-wrap: nowrap; flex-direction: column; white-space: normal;">
                    <ui:Toggle label="Generate paper patterns (PNG files)" value="true" name="CreatePNG" style="flex-direction: row-reverse;" />
                    <ui:Toggle label="Generate paper pattern (PDF file)" name="CreatePDF" value="false" style="flex-direction: row-reverse;" />
                    <ui:Toggle label="Generate 3D Printer pattern (STL files - beta)" value="false" name="Create25D" style="flex-direction: row-reverse; justify-content: space-around;" />
                </ui:VisualElement>
                <ui:Button text="Export files..." display-tooltip-when-elided="true" name="SaveArtcraft" />
            </ui:VisualElement>
        </ui:VisualElement>
        <ui:VisualElement name="NavigationPanel" style="align-items: stretch; flex-direction: column; justify-content: space-between; flex-grow: 1; flex-wrap: nowrap; padding-left: 10px; padding-right: 10px; padding-top: 10px; padding-bottom: 10px;">
            <ui:VisualElement name="ActionPanel" style="flex-direction: row; justify-content: space-between;">
                <ui:VisualElement name="SwitchPanel" style="flex-direction: row; height: 50px; flex-grow: 1; margin-right: 20px; max-height: 50px;">
                    <ui:Button text="View Model" display-tooltip-when-elided="true" name="ViewModel" style="width: auto; position: relative; left: auto; opacity: 0.7; height: auto; flex-grow: 1; flex-wrap: wrap; white-space: normal; cursor: initial;" />
                    <ui:Button text="Artcraft Preview" display-tooltip-when-elided="true" name="ViewPreview" style="width: auto; position: relative; left: auto; opacity: 0.7; flex-grow: 1; flex-wrap: wrap; white-space: normal;" />
                    <ui:Button text="View Paper Artcraft" display-tooltip-when-elided="true" name="View2D" style="width: auto; position: relative; left: auto; opacity: 0.7; flex-grow: 1; flex-wrap: wrap; white-space: normal;" />
                    <ui:Button text="View 3D Printer pattern (beta)" display-tooltip-when-elided="true" name="View25D" style="width: auto; position: relative; left: auto; opacity: 0.7; flex-grow: 1; flex-wrap: wrap; white-space: normal;" />
                </ui:VisualElement>
                <ui:VisualElement style="align-items: stretch; width: 150px; justify-content: flex-start; flex-direction: row-reverse;">
                    <ui:Button text="Rotate model 90°" display-tooltip-when-elided="true" name="RotateModel" style="opacity: 0.7; flex-grow: 1; position: absolute; width: 150px; height: 50px;" />
                    <ui:Button text="Switch Font / Back page view" display-tooltip-when-elided="true" name="SwitchFrontBack" style="width: 150px; height: 50px; opacity: 0.7; flex-wrap: nowrap; white-space: normal; flex-grow: 1; position: absolute;" />
                </ui:VisualElement>
            </ui:VisualElement>
            <ui:VisualElement style="flex-grow: 1; align-items: stretch; justify-content: flex-end; flex-direction: row; padding-left: 8px; padding-right: 8px; padding-top: 8px; padding-bottom: 8px;">
                <ui:Slider picking-mode="Ignore" label="Explode preview" value="8" high-value="50" name="ExplodeAmount" show-input-field="false" direction="Vertical" page-size="0.1" focusable="false" style="flex-direction: column; height: 50%; align-items: center;" />
            </ui:VisualElement>
        </ui:VisualElement>
    </ui:VisualElement>
    <ui:VisualElement name="TaskBar" style="width: 100%; height: 35px; background-color: rgba(197, 197, 197, 0.76); position: relative; justify-content: space-between; flex-direction: row; padding-top: 4px; padding-bottom: 4px;">
        <ui:Button text="Cancel" display-tooltip-when-elided="true" name="Cancel" />
        <ui:VisualElement style="width: 100%; padding-right: 10px;">
            <ui:VisualElement name="ProgressAmount" style="height: 100%; width: 100%; background-color: rgba(85, 156, 98, 0.93); align-items: auto; justify-content: space-between; margin-left: 4px; margin-right: 4px; margin-top: 3px; margin-bottom: 3px; padding-right: 0;" />
            <ui:Label text="Task progress " display-tooltip-when-elided="true" name="ProgressMessage" style="align-items: auto; height: 100%; justify-content: flex-start; -unity-text-align: middle-left; position: absolute; width: 100px; left: 0; margin-left: 15px;" />
        </ui:VisualElement>
    </ui:VisualElement>
</ui:UXML>
